generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @unique
  name     String
  password String @db.VarChar(1000)
  posts    Post[]
}

model Post {
  id          Int    @id @unique
  title       String
  description String @db.VarChar(1000)
  user        User   @relation(fields: [user_id], references: [id])
  user_id     Int
}
